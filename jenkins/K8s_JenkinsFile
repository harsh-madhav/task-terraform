pipeline {
    agent any

    environment {
        KUSTOMIZE_DIR = "kubernetes/"   // <-- adjust to your kustomize path
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev',
                    url: 'https://github.com/harsh-madhav/task-terraform.git',
                    credentialsId: 'git-credentials'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // No kubeconfig needed since Jenkins is already connected to Kubernetes Cloud
                    sh '''
                        # Apply manifests
                        kustomize build ${KUSTOMIZE_DIR} | kubectl apply -f -
                    '''
                }
            }
        }
    }

    post {
        failure {
            echo "Deployment failed!"
        }
        success {
            echo "Deployment succeeded!"
        }
    }
}
